<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddChessPlayer">

    <EditText
        android:id="@+id/name_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:maxLines="5"
        android:hint="Имя"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">
    </EditText>

    <EditText
        android:id="@+id/surname_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:maxLines="5"
        android:hint="Фамилия"
        app:layout_constraintTop_toBottomOf="@+id/name_player">
    </EditText>

    <EditText
        android:id="@+id/rating_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:maxLines="5"
        android:hint="Рейтинг"
        app:layout_constraintTop_toBottomOf="@+id/surname_player">>
    </EditText>

    <Button
        android:id="@+id/add_new_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>