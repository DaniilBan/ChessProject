<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourActivity">

    <EditText
        android:id="@+id/tournament_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название турнира:"
        android:textSize="30dp"
        android:maxLines="5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </EditText>

    <TextView
        android:id="@+id/tournament_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="11-22-2024"
        android:maxLines="5"
        app:layout_constraintTop_toBottomOf="@id/tournament_name_edit">
    </TextView>

    <CalendarView
        android:id="@+id/calendar_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:weekSeparatorLineColor="#00ff00"
        android:selectedWeekBackgroundColor="#ff0000"
        android:weekNumberColor="#0000ff"
        app:layout_constraintTop_toBottomOf="@id/tournament_name_text">
    </CalendarView>

<!--    <Button-->
