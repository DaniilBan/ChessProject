<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TourManager">

    <TextView
        android:id="@+id/name_tournament"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="0"
        android:textSize="30dp"
        android:maxLines="5"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent">
    </TextView>

    <ListView
        android:id="@+id/tour_chess_players_pars"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/name_tournament"
        app:layout_constraintBottom_toTopOf="@+id/next_tour_btn"
        tools:layout_editor_absoluteX="0dp">
    </ListView>

    <Button
        android:id="@+id/next_tour_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT TOUR"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>